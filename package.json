{
  "name": "tslint-config-chweb",
  "version": "0.1.2-beta",
  "description": "tslint rules for Disciple frontend team.",
  "main": "index.js",
  "files": [
    "lib",
    "index.js"
  ],
  "scripts": {
    "build": "yarn clean && yarn test && yarn build:src && yarn build:rules",
    "build:rules": "ts-node ./scripts/build.ts",
    "build:src": "tsc -p .",
    "clean": "rimraf ./lib",
    "test": "jest",
    "lint": "tslint -p . -c tslint.js",
    "prepublishOnly": "yarn build"
  },
  "keywords": [
    "tslint",
    "typescript",
    "codestyle"
  ],
  "author": "Nick <tick_lin@sina.com>",
  "license": "MIT",
  "peerDependencies": {
    "tslint": "^5.1.0",
    "typescript": ">=2.8.0"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.0.10",
    "glob": "^7.1.4",
    "jest": "^24.8.0",
    "path": "^0.12.7",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.1.0",
    "typescript": "^3.5.2"
  }
}
